---
import { socials } from "../utils/data";
---

<section
  id="about"
  class="mx-auto bg-primary flex justify-evenly mb-8 scroll-mt-36 lg:w-[70%] lg:flex-row lg:items-center lg:px-10 sm:w-[60%] xs:w-full xs:flex-col xs:px-0"
>
  <ul
    class="justify-items-center xl:hidden md:hidden xs:grid"
    style={{
      gridTemplateColumns: `repeat(${socials.length}, minmax(0,1fr))`,
    }}
  >
    {
      socials.map((social) => (
        <li>
          <a
            target="_blank"
            href={social.link}
            class="text-2xl opacity-50 hover:opacity-100 duration-300 ease-in cursor-pointer"
          >
            <i class={social.logo} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
